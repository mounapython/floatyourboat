<section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="text"><strong> BOAT CATHALOGUE </strong></h1>
        <p class="lead text-muted">Here is our featured selection of boats from our array.</p>
      </div>
    </div>
</section>


<div class="album py-5">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          <% @boats.each do |boat| %>
            <div class="col">
              <div class="card shadow-sm">
                <img src="https://www.seattleyachts.com/photos/yachts/large/3100.jpg" alt="boat poster" width="100%" height="225" focusable="false">
                <div class="card-body">
                  <h1 class="card-text text"><strong><%= boat.name.capitalize %></strong></h1>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                    </div>
                    <small class="text-muted"><%= boat.price %> $</small>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
      </div>
    </div>
</div>
