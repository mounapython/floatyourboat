<div class="container">
  <h2>New Listing</h2>

  <%= simple_form_for(@boat) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "Name of boat" }%>
      <%= f.input :description,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "description" }%>
      <%= f.input :category,
                  collection: ["Cruise Ship", "Fishing Boat", "Super Yacht", "Pirate Ship", "Motor Yacht"],
                  required: true,
                  autofocus: true %>
      <%= f.input :address,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "address" }%>
      <%= f.input :price,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "price" }%>
      <%= f.input :photo,
                  required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Save & Publish", class:"btn btn-warning" %>
    </div>
  <% end %>

</div>
