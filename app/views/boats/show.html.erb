<div class="card">
  <div class="card-body titles">
    <%= @boat.name.capitalize %>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
      <%= link_to "Book This Boat !", new_boat_booking_path(@boat), class:"btn btn-outline-warning btn-lg me-md-2" %>
    </div>
  </div>
</div>

<p> </p>

<div class="container">

  <div id="carouselExample" class="carousel slide position-relative">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="<%=cl_image_path @boat.photo.key%>" class="d-block w-100"  width="100%" height="500" >
      </div>
      <div class="carousel-item position-relative">
        <img src="<%=cl_image_path @boat.photo.key%>" class="d-block w-100"  width="100%" height="500" >
      </div>
      <div class="carousel-item position-relative">
        <img src="<%=cl_image_path @boat.photo.key%>" class="d-block w-100"  width="100%" height="500" >
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>

    <div class="position-absolute top-0 end-0">
      <ul class="list-group list-group-horizontal">
        <li class="list-group-item cathegory"><%= @boat.category %></li>
      </ul>
    </div>


    <div class="card position-absolute bottom-0 start-0">
      <div class="card-body">
      <p class='cathegory'><%= @boat.address %> <p>
      </div>
    </div>

  </div>

  <p> </p>

  <div class="card">
    <div class="card-body cathegory">
      <strong><%= @boat.description %></strong>
  </div>

<%= simple_form_for [@boat, Review.new] do |f|%>
<%= f.input :comment %>
<%= f.input :rating %>
<%= f.submit "send" %>
 <% end %>

  <% @reviews.each do |review|%>
  <%= review.rating  %>
  <%= review.comment  %>
  <% end %>

</div>
